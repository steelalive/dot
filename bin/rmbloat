for dir in '/' /data/app /system/app /system/priv-app $PWD/ $PWD/data/app $PWD/system/app $PWD/system/priv-app $PWD/app $PWD/priv-app /system/system/app /system/system/priv-app; do
	cd "$dir"
	for crap in $DELETE; do
		full="$(echo ${dir}/*${crap}*)"
		[[ -e $full ]] && rm -rf "${full}" && ANRED "rm -rf ${full} \\nUNINSTALLED1 ${Y}$full${R} ...\n"
		[[ -e "${dir}/${crap}" ]] && rm -rf "${dir}/${crap}" && ANRED "UNINSTALLED2 rm -rf ${Y}${dir}/${crap}${R} ...\n"
		[[ -e $crap ]] && rm -rf $(echo /system/app/*$crap* /system/priv-app/*$crap*) && ANRED "rm -rf $crap\\nUNINSTALLED3 ${Y}${dir}/${crap}${R} ...\n"
	done
done
#pmu $PMU
rm_empty_dir /system/app/* /system/priv-app/* /sdcard/* /data/app/* /system/system/app/* /system/system/priv-app/*
