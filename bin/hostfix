#!/bin/bash
echo "# [ANYTHING OUTSIDE OF 'User configurations' WILL BE OVERWITTEN!]
#
# /etc/hosts: static lookup table for host names
#
#<ip-address>    <hostname.domain.org>    <hostname>
#127.0.0.1				$HOSTNAME.localdomain	$HOSTNAME
# aliases
192.168.0.20															PC
192.168.0.5																TV
192.168.0.8																S4
192.168.0.1																ROUTER
# End of file
# User configurations

# /etc/hosts: static lookup table for host names
#

#<ip-address> <hostname.domain.org> <hostname>
127.0.0.1						localhost.localdomain PC
::1									localhost.localdomain PC

# Example of other hosts you may wish to keep in the /etc/hosts

#192.168.100.1			modem
#192.168.1.1				router
#192.168.1.2				pc1
#192.168.1.3				pc2
##################################" >> /tmp/step1
adaway update
adaway upgrade
adaway enable
adaway apply
cat /etc/hosts >> /tmp/step1
cat /tmp/step1 > /etc/hosts
rm /tmp/step1





