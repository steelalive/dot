#!/bin/bash
#-*- coding: utf-8 -*-
#1#_SCRIPT_#1# - by: steelalive
#2#::.. Last edit: - Sat Jul 28 09:35:47 EDT 2018 ..::## #_# - VERSION=0.0.0.1 - #_# #@#2018-07-28#@# #2#
# vi: set noro: ft=sh
#3#::..#####################_/dot/bin/rmdangling_#######################..::#3#
[[ $1 ]] || exit
find "$@" -type l | while read f; do if [ ! -e "$f" ]; then rm -fv "$f"; fi; done
