#!/bin/bash
#-*- coding: utf-8 -*-
#1#_SCRIPT_#1# - by: steelalive
#2#::.. Last edit: - Tue Aug 14 01:18:25 EDT 2018 ..::## #_# - VERSION=0.0.0.1 - #_# #@#2018-08-14#@# #2#
# vi: set noro: ft=sh
#3#::..#####################_/dot/bin/resync_#######################..::#3#
resync() {
	proc="$(nproc --all)"
	cd ${kernel:-kernel/motorola/msm8916} && gitreset
	[[ $src ]] || return
	cd $src || return
	repo --color=auto --no-pager sync --no-clone-bundle --current-branch --prune --no-tags --optimized-fetch --force-sync -j${proc:-$1} $2 $3
	[[ $src ]] || return
	cd $src || return
}
resync "$@"
