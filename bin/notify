#1#_SCRIPT_#1#
#2#::.. Last edit: - Thu May 25 15:45:11 EDT 2017 - by: -  - ..::## #_# - VERSION=0.0.0.3 - #_# #@#250517#@# #2#
#3#::..#####################_MAIN_#######################..::#3#
len=$((${#1} + 2))
printf "\n+"
printf -- "-%.0s" $(seq 1 $len)
printf "+\n| $1 |\n+"
printf -- "-%.0s" $(seq 1 $len)
printf "+\n\n"
