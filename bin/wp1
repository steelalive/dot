#!/bin/bash
#-*- coding: utf-8 -*-
#2#::.. Last edit: - Mon Jun  6 18:54:30 EDT 2016 - by: - __INDNYALL__ - ..::## #_# - VERSION=0.0.0.1 - #_# #@#060616#@# #2#
#3#::..#####################_MAIN_#######################..::#3#
export whatev
while [[ $whatev != q ]]; do
	$ANG a-add 1-enable one d-disable s-scan networks q-quit
	read whatev
	case $whatev in
	s*)
		wpa_cli scan
		sleep 3
		$ANLG
		wpa_cli scan_results | column
		export ok=99
		;;
	a*)
		while [[ $netnum != "q" ]]; do
			$ANO
			wpa_cli list_networks $NET
			$ANLY "Please select a network number"
			read netnum
			wpa_cli enable_network $netnum
		done
		;;
	q*)
		exit 0
		;;
	d*)
		$ANO
		wpa_cli list_networks $NET
		$ANLY "Please select a network number"
		read netnum
		wpa_cli disable_network $netnum
		;;
	1 | one | *)
		$ANO
		wpa_cli list_networks $NET
		$ANLY "Please select a network number"
		read netnum
		wpa_cli select_network "${netnum}"
		export ok=0
		;;
	g*)
		exit 0 &
		/root/bin/wp
		;;
	esac
done
