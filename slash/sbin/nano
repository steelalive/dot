# nano: set up and run nano from recovery/terminal
# osm0sis @ xda-developers
if [ "$1" == "--term" ]; then
	term=$2
	shift 2
else
	term=xterm-256color
fi

clear
for i in $slash/sbin $slash/sbin /sbin /system/sbin /system/bin /system/xbin /su/bin /su/xbin; do
	[[ -e $i/nano.bin ]] && { bin=$i && break; }
done
for i in $slash/etc $slash/etc /sbin /system/etc /etc; do
	[[ -e $i/terminfo ]] && { etc=$i && break; }
done
unalias nano &>/dev/null
unset nano
TERMINFO=$etc/terminfo TERM=$term $bin/nano.bin "$@"
