    mkdir -p /sbin/.core/mirror/bin
    mount -o bind /data/adb/magisk /sbin/.core/mirror/bin
fi

# Versioning & Date
# =======================================================#
version='1.8'$N > /dev/null 2>&1
released=$G'APRIL 14, 2019'$N > /dev/null 2>&1
