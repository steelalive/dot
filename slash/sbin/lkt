sleep "0.01"
echo -e $Y"$divider"$N
sleep "0.01"
echo -e $Y'--------------- T H A N K   Y O U ---------------'$N
sleep "0.01"
echo -e $Y"$divider"$N
echo ''
sleep "0.01"
echo -e $Y'        Omar Koulache - @korom42 - XDA'$N
sleep "0.01"
sleep 1
clear
exit 0
