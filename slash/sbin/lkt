# Features & Main Parts
# =======================================================#
while true
do

if [ -f $LOG ]; then
  STATUS=$G" RUNNING"$N
else
  STATUS=$Y" LOGS NOT FOUND"$N
fi;


PROFILE_M=$(head -2 $LOG | awk -F: '{ print toupper($2) }'  | tr -d '\n') > /dev/null 2>&1

case ${PROFILE_M} in
		" BATTERY")
		PROFILE=$G"$PROFILE_M"$N

		;;
		" BALANCED")
		PROFILE=$Y"$PROFILE_M"$N

		;;
		" PERFORMANCE")
		PROFILE=$R"$PROFILE_M"$N

		;;
		" TURBO")
		PROFILE=$P"$PROFILE_M"$N

		;;
